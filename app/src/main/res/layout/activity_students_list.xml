<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbackgroud"
    tools:context=".StudentsList"
    >

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:gravity="center"
        android:numColumns="3"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp">

    </GridView>
    <Button
        android:id="@+id/btAddStudent"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:background="@color/btn5color"
        android:text="Add New Student"
        android:textColor="@android:color/white"
        android:layout_below="@+id/gridView1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on the student to check their profile and more options."
        android:textColor="@color/taglinecolor"
        android:textSize="10dp"
        android:layout_below="@+id/btAddStudent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />


</RelativeLayout>