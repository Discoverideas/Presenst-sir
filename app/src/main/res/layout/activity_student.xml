<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackgroud">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rec9"
        android:id="@+id/imageView2"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:textSize="20dp"
        android:textColor="@color/m1color"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rec8"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stats"
        android:textAlignment="center"
        android:textColor="@color/m1color"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/ivcallstu"
        android:layout_alignEnd="@+id/ivcallstu" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rec7"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/imageView7"
        android:layout_alignEnd="@+id/imageView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:src="@drawable/rec6"
        android:id="@+id/imageView7"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView

        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="record"
        android:textAlignment="center"
        android:textColor="@color/m1color"
        android:textSize="20dp"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_icon"
        android:layout_below="@+id/stdname"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:layout_alignBottom="@+id/ivImage"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:id="@+id/stdname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:layout_alignBottom="@+id/stdname"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:id="@+id/imageView8" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:id="@+id/imageView9"

        android:layout_alignBottom="@+id/ivcallstu"
        android:layout_alignLeft="@+id/eaddress"
        android:layout_alignStart="@+id/eaddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father's Name -"
        android:textSize="15dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/ivImage"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8"
        android:layout_marginTop="10dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:layout_alignTop="@+id/tvsfname"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image"
        android:id="@+id/imageView6" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvsfname"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toRightOf="@+id/tvsscore"
        android:layout_alignRight="@+id/tvsphone"
        android:layout_alignEnd="@+id/tvsphone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class -"
        android:textSize="15dp"
        android:id="@+id/tvclass"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvsclass"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_above="@+id/textView15"
        android:layout_alignLeft="@+id/tvsfname"
        android:layout_alignStart="@+id/tvsfname" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:id="@+id/image"
        android:layout_alignTop="@+id/tvsclass"
        android:layout_alignLeft="@+id/eaddress"
        android:layout_alignStart="@+id/eaddress" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No -"
        android:textSize="15dp"
        android:id="@+id/textView15"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tvclass"
        android:layout_alignLeft="@+id/tvclass"
        android:layout_alignStart="@+id/tvclass" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/phone_icon"
        android:id="@+id/ivcallstu"
        android:clickable="true"
        android:onClick="click"
        android:layout_above="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvsphone"
        android:textSize="15dp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="click"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignLeft="@+id/tvsaddress"
        android:layout_alignStart="@+id/tvsaddress" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:id="@+id/ephone"
        android:layout_alignTop="@+id/tvsjoin"
        android:layout_alignLeft="@+id/eaddress"
        android:layout_alignStart="@+id/eaddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address -"
        android:textSize="15dp"
        android:id="@+id/textView16"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvsaddress"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_toRightOf="@+id/tvsscore" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:id="@+id/eaddress"
        android:layout_alignTop="@+id/tvsaddress"
        android:layout_alignRight="@+id/tvsaddress"
        android:layout_alignEnd="@+id/tvsaddress" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joining Date -"
        android:textSize="15dp"
        android:id="@+id/textView17"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/eaddress"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvsjoin"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toRightOf="@+id/textView8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/tvsphone"
        android:layout_alignEnd="@+id/tvsphone" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:id="@+id/efees"
        android:layout_alignTop="@+id/tvsfees"
        android:layout_alignLeft="@+id/ephone"
        android:layout_alignStart="@+id/ephone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score -"
        android:textSize="15dp"
        android:id="@+id/textView18"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvsscore"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees -"
        android:textSize="15dp"
        android:id="@+id/textView19"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvsfees"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date -"
        android:textSize="15dp"
        android:id="@+id/tvduedate"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvsduedate"

        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tvduedate"
        android:layout_alignBottom="@+id/tvduedate"
        android:layout_alignLeft="@+id/tvsfees"
        android:layout_alignStart="@+id/tvsfees" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on the values to edit them."
        android:textColor="@color/taglinecolor"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp" />


</RelativeLayout>